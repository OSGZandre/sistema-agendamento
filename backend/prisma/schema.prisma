generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int            @id @default(autoincrement())
  nome      String         @db.Text
  email     String         @unique
  senha     String         @db.Text
  tipo      TipoUsuario
  criadoEm  DateTime       @default(now())
}

enum TipoUsuario {
  CLIENTE
  DONO
  ADMIN
}
